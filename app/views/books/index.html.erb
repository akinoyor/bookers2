 <% if @newbook.errors.any? %>
    <h3><%= @newbook.errors.count %>error prohibited this obj from being saved:</h3>
    <ul>
      <% @newbook.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
      <% end %>

<div class ="container">
  <div class ="row">
    <div class ="col-3">
      <%= render 'new',book:@newbook, user:@user %>
    </div>

    <div class ="col-8 offset-1">
      <h2>Books</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th class = "col-2"></th>
            <th class = "col-4">Title</th>
            <th class = "col-6">Opinion</th>
            <th colspan ="3"></th>
          </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td class ="col-2"><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td class = "col-4">
              <%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td class = "col-6"><%= book.body %></td>
            <td colspan ="3"></td>

          </tr>
        <% end %>
        </tbody>

      </table>

    </div>
  </div>
</div>
