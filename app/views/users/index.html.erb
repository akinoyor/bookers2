<div class ="container">
  <div class ="row">
    <div class ="col-3">
      <%= render './books/new',book:@newbook, user:@user %>
    </div>

    <div class ="col-8 offset-1">
      <h2>Users</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th class = "col-2">image</th>
            <th colspan ="2"></th>
            <th class = "col-2">name</th>
            <th colspan ="6"></th>
          </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class ="col-2"><%= image_tag user.get_profile_image(100,100) %></td>
            <td colspan ="2"></td>
            <td class = "col-2"><%= user.name %></td>
            <td colspan ="4"></td>
            <td class ="col-2"><%= link_to "Show",user_path(user.id) %></td>

          </tr>
        <% end %>
        </tbody>

      </table>
